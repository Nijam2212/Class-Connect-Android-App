<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_assignment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentAssignmentActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvAssignmentsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Assignments"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStudentAssignments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvAssignmentsHeader"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:clipToPadding="false" />
</RelativeLayout>
